{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "context/*": [
        "src/context/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "config/*": [
        "config/*"
      ]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "environment.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.config.js",
    "firebase.js",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ]
}